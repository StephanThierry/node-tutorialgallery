if [ "$#" -gt 0 ]; then
    command=$1; shift
    if [ -f ./rs${command}.js ]; then
        exec ./rs${command}.js $@
    else
        echo "$0: Command '$command' does not exist." >&2
        exit 1
    fi
else
    echo "$0: No command given." >&2
    echo "Usage: rs COMMAND [...]" >&2
    exit 1
fi